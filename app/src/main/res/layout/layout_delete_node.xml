    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
